{
  "manifest_version": 3,
  "name": "YouTube Saver",
  "version": "1.0",
  "description": "Saves YouTube video links at the current time of visualization",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "https://www.youtube.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "bookmarks"
  ],
  "host_permissions": [
    "https://youtube.com/*"
  ]
}